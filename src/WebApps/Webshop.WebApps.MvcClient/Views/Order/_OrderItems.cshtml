@model Webshop.WebApps.MvcClient.ViewModels.Order

<section class="webshop-orders-section">
    <article class="webshop-orders-titles row">
        <section class="webshop-orders-title col-12">Order details</section>
    </article>

    @for (int i = 0; i < Model.OrderItems.Count; i++)
    {
        var item = Model.OrderItems[i];

        <article class="webshop-orders-items webshop-orders-items-border row">
            <section class="webshop-orders-item col-md-4 hidden-md-down">
                <img class="webshop-orders-image" src="@item.PictureUri">
                <input type="hidden" value="@item.PictureUri" name=@("orderitems[" + i + "].PictureUri") />
            </section>
            <section class="webshop-orders-item webshop-orders-item-middle col-4">
                @item.ProductName
                <input type="hidden" value="@item.ProductName" name=@("orderitems[" + i + "].ProductName") />
            </section>
            <section class="webshop-orders-item webshop-orders-item-middle col-1">
                @item.UnitPrice.ToString("N2") €
                <input type="hidden" value="@item.UnitPrice" name=@("orderitems[" + i + "].UnitPrice") />
            </section>
            <section class="webshop-orders-item webshop-orders-item-middle col-1">
                @item.Units
                <input type="hidden" value="@item.Units" name=@("orderitems[" + i + "].Units") />
            </section>
            <section class="webshop-orders-item webshop-orders-item-middle col-2">@Math.Round(item.Units * item.UnitPrice, 2).ToString("N2") €</section>
        </article>
    }
</section>

<section class="webshop-orders-section webshop-orders-section-right">
    <article class="webshop-orders-titles row">
        <section class="webshop-orders-title col-9"></section>
        <section class="webshop-orders-title col-2">Total</section>
    </article>

    <article class="webshop-orders-items row">
        <section class="webshop-orders-item col-9"></section>
        <section class="webshop-orders-item webshop-orders-item-mark col-2">
            @Model.TotalPrice.ToString("N2") €
            <input type="hidden" value="@Model.TotalPrice" name="TotalPrice" />
        </section>
    </article>
</section>
