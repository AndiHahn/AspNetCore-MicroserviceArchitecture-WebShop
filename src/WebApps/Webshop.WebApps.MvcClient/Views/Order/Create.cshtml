@model Webshop.WebApps.MvcClient.ViewModels.Order

@{
    ViewData["Title"] = "New Order";
}

<div class="container">
    <form method="post" asp-controller="Order" asp-action="Checkout">
        <section class="webshop-orders-section">
            <div class="row">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(err => err.Errors))
                {
                    <div class="alert alert-warning" role="alert">
                        &nbsp;@error.ErrorMessage
                    </div>
                }
            </div>
            <h4 class="webshop-orders-title">Shipping address</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Country" class="webshop-orders-title">Country</label>
                        <input asp-for="Country" class="form-control form-input" type="text" placeholder="Country" />
                        <span asp-validation-for="Country" class="alert alert-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ZipCode" class="webshop-orders-title">Zip Code</label>
                        <input asp-for="ZipCode" class="form-control form-input" type="text" placeholder="Zip code" />
                        <span asp-validation-for="ZipCode" class="alert alert-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="City" class="webshop-orders-title">City</label>
                        <input asp-for="City" class="form-control form-input" type="text" placeholder="City" />
                        <span asp-validation-for="City" class="alert alert-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Street" class="webshop-orders-title">Address</label>
                        <input asp-for="Street" class="form-control form-input" type="text" placeholder="Street" />
                        <span asp-validation-for="Street" class="alert alert-danger" />
                    </div>
                </div>
            </div>
        </section>
        <section class="webshop-orders-section">
            <h4 class="webshop-orders-title">Payment method</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CardNumber" class="webshop-orders-title">Card number</label>
                        <input asp-for="CardNumber" class="form-control form-input" type="text" placeholder="000000000000000" />
                        <span asp-validation-for="CardNumber" class="alert alert-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CardHolderName" class="webshop-orders-title">Cardholder name</label>
                        <input asp-for="CardHolderName" class="form-control form-input" type="text" placeholder="Cardholder" />
                        <span asp-validation-for="CardHolderName" class="alert alert-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CardExpirationShort" class="webshop-orders-title">Expiration date</label>
                        <input asp-for="CardExpirationShort" class="form-control form-input form-input-medium" type="text" placeholder="MM/YY" />
                        <span asp-validation-for="CardExpirationShort" class="alert alert-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CardSecurityNumber" class="webshop-orders-title">Security code</label>
                        <input asp-for="CardSecurityNumber" class="form-control form-input form-input-small" type="text" placeholder="000" />
                        <span asp-validation-for="CardSecurityNumber" class="alert alert-danger" />
                    </div>
                </div>
            </div>
        </section>

        @await Html.PartialAsync("_OrderItems")

        <section class="webshop-orders-section">
            <div class="form-group row">
                <div class="col-md-9">
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Place Order" name="action" class="btn webshop-orders-placeOrder" />
                </div>
            </div>
        </section>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
