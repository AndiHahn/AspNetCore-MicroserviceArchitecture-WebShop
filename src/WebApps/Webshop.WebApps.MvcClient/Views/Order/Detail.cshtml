@model Webshop.WebApps.MvcClient.ViewModels.Order

@{
    ViewData["Title"] = "Order Detail";
}

<div class="webshop-orders_detail">
    <div class="container">
        <section class="webshop-orders_detail-section">
            <article class="webshop-orders_detail-titles row">
                <section class="webshop-orders_detail-title col-3">Date</section>
                <section class="webshop-orders_detail-title col-3">Total</section>
                <section class="webshop-orders_detail-title col-3">Status</section>
            </article>

            <article class="webshop-orders_detail-items row">
                <section class="webshop-orders_detail-item col-3">@Model.OrderDate</section>
                <section class="webshop-orders_detail-item col-3">@Model.TotalPrice €</section>
                <section class="webshop-orders_detail-title col-3">@Model.Status</section>
            </article>
        </section>

        <section class="webshop-orders_detail-section">
            <article class="webshop-orders_detail-titles row">
                <section class="webshop-orders_detail-title col-12">Description</section>
            </article>

            <article class="webshop-orders_detail-items row">
                <section class="webshop-orders_detail-item col-12">@Model.Description</section>
            </article>
        </section>

        <section class="webshop-orders_detail-section">
            <article class="webshop-orders_detail-titles row">
                <section class="webshop-orders_detail-title col-12">Shiping address</section>
            </article>

            <article class="webshop-orders_detail-items row">
                <section class="webshop-orders_detail-item col-12">@Model.Street</section>
            </article>

            <article class="webshop-orders_detail-items row">
                <section class="webshop-orders_detail-item col-12">@Model.City</section>
            </article>

            <article class="webshop-orders_detail-items row">
                <section class="webshop-orders_detail-item col-12">@Model.Country</section>
            </article>
        </section>

        <section class="webshop-orders_detail-section">
            <article class="webshop-orders_detail-titles row">
                <section class="webshop-orders_detail-title col-12">ORDER DETAILS</section>
            </article>

            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                var item = Model.OrderItems[i];
                <article class="webshop-orders_detail-items webshop-orders_detail-items--border row">
                    <section class="webshop-orders_detail-item col-md-4 hidden-md-down">
                        <img class="webshop-orders_detail-image" src="@item.PictureUri">
                    </section>
                    <section class="webshop-orders_detail-item webshop-orders_detail-item--middle col-4">@item.ProductName</section>
                    <section class="webshop-orders_detail-item webshop-orders_detail-item--middle col-1">@item.UnitPrice.ToString("N2") €</section>
                    <section class="webshop-orders_detail-item webshop-orders_detail-item--middle col-1">@item.Units</section>
                    <section class="webshop-orders_detail-item webshop-orders_detail-item--middle col-2">@Math.Round(item.Units * item.UnitPrice, 2).ToString("N2") €</section>
                </article>
            }
        </section>

        <section class="webshop-orders_detail-section webshop-orders_detail-section--right">
            <article class="webshop-orders_detail-titles webshop-basket-titles--clean row">
                <section class="webshop-orders_detail-title col-9"></section>
                <section class="webshop-orders_detail-title col-2">TOTAL</section>
            </article>

            <article class="webshop-orders_detail-items row">
                <section class="webshop-orders_detail-item col-9"></section>
                <section class="webshop-orders_detail-item webshop-orders_detail-item--mark col-2">@Model.TotalPrice.ToString("N2") €</section>
            </article>
        </section>
    </div>
</div>
